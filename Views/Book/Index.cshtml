@model IEnumerable<Books>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-0">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-conroller="Book" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>
                Add New Book
            </a>
        </div>
    </div>
    <br />

<table class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Publisher</th>
            <th>Release Year</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var b in Model)
        {
            <tr>
                <td>@b.ISBN</td>
                <td>@b.BookName</td>
                <td>@b.Author</td>
                <td>@b.Publisher</td>
                <td>@b.ReleaseYear</td>
                <td>@b.Price</td>
                <td>
                    <div class="w-100 btn-group m-1" role="group">
                        <a asp-controller="Book" asp-action="Update" asp-route-id="@b.BookId" class="btn btn-primary rounded-5" ><i class="bi bi-pencil-square me-1"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-100 btn-group m-1" role="group">
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@b.BookId" class="btn btn-danger rounded-5"><i class="bi bi-x-square me-1"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>

