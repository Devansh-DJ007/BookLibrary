@model Books

<form method="post" asp-action="Update">
    <input asp-for="BookId" hidden />
    <div class="border p-3 p-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Book Entry</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="BookName"></label>
            <input asp-for="BookName" class="form-control" />
            <span asp-validation-for="BookName" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
            <span asp-validation-for="Author" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" class="form-control" />
            <span asp-validation-for="ISBN" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Publisher"></label>
            <input asp-for="Publisher" class="form-control" />
            <span asp-validation-for="Publisher" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseYear"></label>
            <input asp-for="ReleaseYear" class="form-control" />
            <span asp-validation-for="ReleaseYear" class="text-bg-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-bg-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Book List</a>
    </div>
</form>